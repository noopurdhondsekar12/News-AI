# News AI Backend - Environment Variables

# Database Configuration
MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DATABASE=news_ai_prod

# External API Keys
UNIGURU_API_KEY=your_uniguru_api_key_here
UNIGURU_BASE_URL=https://api.uniguru.com

# BHIV Core Integration
BHIV_CORE_URL=https://bhiv-core.production.com
BHIV_API_KEY=your_bhiv_api_key_here

# Sankalp Insight Node (Audio Generation)
SANKALP_INSIGHT_NODE_URL=https://sankalp-insight.production.com
SANKALP_API_KEY=your_sankalp_api_key_here

# Seeya Orchestrator
SEYA_ORCHESTRATOR_URL=https://seeya-orchestrator.production.com
SEYA_API_KEY=your_seeya_api_key_here

# Chandragupta Frontend
CHANDRAGUPTA_FRONTEND_URL=https://news-ai-frontend.vercel.app

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# Test Configuration (for integration tests)
TEST_BASE_URL=http://localhost:8000
STAGING_BASE_URL=https://news-ai-backend-staging.up.railway.app
PRODUCTION_BASE_URL=https://api.news-ai.com

# Railway-specific (auto-configured)
PORT=8000
RAILWAY_STATIC_URL=https://your-app.railway.app

# Security
SECRET_KEY=your-secret-key-here
API_KEY_SALT=your-salt-here

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Scheduler Settings
SCHEDULER_ENABLED=true
MAX_WORKERS=5
QUEUE_SIZE_LIMIT=1000

# RL Settings
RL_ADAPTIVE_SCALING=true
RL_REWARD_THRESHOLD=0.6
RL_MAX_CORRECTIONS=3